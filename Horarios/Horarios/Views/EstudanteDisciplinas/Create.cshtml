@model Horarios.Models.EstudanteDisciplina

@{
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>EstudanteDisciplina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstudanteId" class="control-label"></label>
                <select asp-for="EstudanteId" class ="form-control" asp-items="ViewBag.EstudanteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DisciplinaId" class="control-label"></label>
                <input asp-for="DisciplinaId" class="form-control" />
                <span asp-validation-for="DisciplinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao menu anterior</a>
</div>

