@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Criar nova conta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>Nome</label>
                <input name="Nome" class="form-control" type="text" />
            </div>

            <div class="form-group">
                <label>Número de Estudante</label>
                <input name="NumeroEstudante" class="form-control" type="text" />
            </div>

            <div class="form-group">
                <label>Ano</label>
                <input name="Ano" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label>Tipo de Utilizador</label>
                <select class="form-control" name="role">
                    <option value="Estudante">Estudante</option>
                    <option value="Professor">Professor</option>
                    <option value="Administrador">Administrador</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Confirmar password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Registar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
